function rotateImage() {
  canvas_front.rotateImage();
}

$(document).ready(async function() {
  let offset = {'x': 77, 'y': 43, 'w': 210, 'h': 298};
  canvas_front = new CanvasUtils(
    document.getElementById('front_page'));
  canvas_front.setBackgroundImage('/images/cards/templates/card-layout.png', offset);

  canvas_back = new CanvasUtils(
    document.getElementById('back_page'));
  canvas_back.setBackgroundImage('/images/cards/templates/card-layout.png', offset);

  canvas_front.canvas.onmousedown = function (e) {
    mousePress = true;
    let idx = canvas_front.selectData(e.clientX, e.clientY);
    canvas_front.sel_data = idx;
    canvas_front.updateCanvas();
    canvas_front.canvas.onmousemove = function(e) {
      if (mousePress) {
        if (idx != -1) {
          canvas_front.moveData(idx, e.clientX, e.clientY);
          canvas_front.updateCanvas();
          canvas_front.writeCords(e.clientX, e.clientY);
        }
      }
    };
  }

  canvas_front.canvas.onmouseup = function(e) {
    mousePress = false;
  }

  handleSteps();

  <% if (typeof designParams != "undefined") { %>
    var designParams = <%- JSON.stringify(designParams) %>
    for (let i = 0; i < designParams.length; i++) {
      await canvas_front.drawImageWithData(designParams[i].image_id, designParams[i].x, designParams[i].y, designParams[i].w, designParams[i].h, designParams[i].scale, designParams[i].rotation);
    }
  <% } %>

  let navBars = $(".probootstrap-nav li");
  for (let i = 0; i < navBars.length; i++) {
    if (i == 1) {
      $(navBars[i]).addClass("active");
