$('#cardMessageFontSize').change(function() {
  $("#cardMessage").css("font-size", $(this).val() + "pt");
  textProp.fontSize = parseInt($('#cardMessageFontSize').val());
  updateText();
});

$('#cardMessageFont').change(function() {
