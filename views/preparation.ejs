    $("#frontCardMessage").css("font-weight", 'bold');
  } else {
    $(this).removeClass('selected');
    $("#frontCardMessage").css("font-weight", 'normal');
  }
});

$("#frontCard-italic-btn").click(function() {
  if (!$(this).hasClass('selected')) {
    $(this).addClass('selected');
    $("#frontCardMessage").css("font-style", 'italic');
  } else {
    $(this).removeClass('selected');
    $("#frontCardMessage").css("font-style", 'normal');
  }
});

$("#backCard-bold-btn").click(function() {
  if (!$(this).hasClass('selected')) {
    $(this).addClass('selected');
    $("#cardMessage").css("font-weight", 'bold');
    textProp.fontWeight = 'bold';
    $("#cardMessageFontWeight").val('400');
  } else {
