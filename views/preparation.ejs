    $("#cardMessage").css("font-weight", 'normal');
    textProp.fontWeight = 'normal';
    $("#cardMessageFontWeight").val('200');
  }
  updateText();
});

$("#backCard-italic-btn").click(function() {
  if (!$(this).hasClass('selected')) {
    $(this).addClass('selected');
    $("#cardMessage").css("font-style", 'italic');
    textProp.fontStyle = 'italic';
    $("#cardMessageFontStyle").val('italic');
  } else {
